{
  "name": "nestjs-query-simple",
  "version": "1.0.1",
  "description": "A thin layer built on top of 'NestJS-Query', enables easy definition of MongoDB/GraphQL Entities and DTOs within NestJS apps.",
  "author": "Raanan Choresh <raanan34@gmail.com>",
  "private": false,
  "license": "MIT",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "/dist"
  ],
  "repository": {
    "type": "git",
    "url": "https://www.npmjs.com/package/nestjs-query-simple"
  },
  "homepage": "https://nestjs-query-simple-website.vercel.app",
  "keywords": [
    "NestJS",
    "TypeScript",
    "GraphQL",
    "MongoDB",
    "Nestjs-query"
  ],
  "scripts": {
    "build": "nest build",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix"
  },
  "devDependencies": {
    "@nestjs/cli": "^10.2.1",
    "@nestjs/schematics": "^10.0.3",
    "@nestjs/testing": "^10.3.0",
    "@types/jest": "^29.5.11",
    "@types/node": "^20.10.5",
    "@types/supertest": "^6.0.1",
    "@typescript-eslint/eslint-plugin": "^6.15.0",
    "eslint": "^8.56.0",
    "eslint-config-standard-with-typescript": "^43.0.0",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-promise": "^6.1.1",
    "migrate-mongoose": "^4.0.0",
    "prettier": "^3.1.1",
    "run-rs": "^0.7.7",
    "supertest": "^6.3.3",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.2",
    "typescript": "^4.9.5"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  },
  "dependencies": {
    "@ptc-org/nestjs-query-graphql": "^5.0.0-alpha.0",
    "@ptc-org/nestjs-query-typegoose": "^5.0.0-alpha.0",
    "@nestjs/apollo": "^12.0.11",
    "@nestjs/platform-express": "^10.3.0"
  }
}
