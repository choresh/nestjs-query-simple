{
  "name": "nestjs-query-simple",
  "version": "2.0.2",
  "description": "A thin layer built on top of 'NestJS-Query', enables easy definition of MongoDB/GraphQL Entities and DTOs within NestJS apps.",
  "author": "Raanan Choresh <raanan34@gmail.com>",
  "private": false,
  "license": "MIT",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "/dist"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/choresh/nestjs-query-simple"
  },
  "homepage": "https://nestjs-query-simple-website.vercel.app",
  "keywords": [
    "NestJS",
    "TypeScript",
    "GraphQL",
    "MongoDB",
    "Nestjs-query"
  ],
  "scripts": {
    "build": "nest build",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "generate-doc": "npx typedoc --plugin typedoc-plugin-markdown src/index.ts"
  },
  "devDependencies": {
    "eslint": "^8.56.0",
    "eslint-config-standard-with-typescript": "^43.0.0",
    "typedoc": "^0.25.7",
    "typedoc-plugin-markdown": "^3.17.1"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  },
  "dependencies": {
    "@nestjs/apollo": "^12.0.11",
    "@nestjs/platform-express": "^10.3.0",
    "@ptc-org/nestjs-query-graphql": "^5.0.0-alpha.0",
    "@ptc-org/nestjs-query-typegoose": "^5.0.0-alpha.0"
  }
}
